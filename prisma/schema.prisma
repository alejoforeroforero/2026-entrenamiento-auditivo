generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Difficulty {
  beginner
  intermediate
  advanced
}

enum Mode {
  major
  minor
}

model Genre {
  id        String   @id
  name      String
  label     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  songs        Song[]
  quizSessions QuizSession[]

  @@map("genres")
}

model Progression {
  id          String     @id @default(cuid())
  name        String
  numerals    String[]
  description String?
  difficulty  Difficulty @default(beginner)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  songs         Song[]
  quizQuestions QuizQuestion[]

  @@index([name])
  @@index([difficulty])
  @@map("progressions")
}

model Song {
  id          String     @id @default(cuid())
  title       String
  artist      String
  key         String
  mode        Mode
  year        Int?
  description String?
  difficulty  Difficulty
  youtubeId   String?
  startTime   Int?
  duration    Int?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  genreId       String
  progressionId String

  genre         Genre          @relation(fields: [genreId], references: [id], onDelete: Cascade)
  progression   Progression    @relation(fields: [progressionId], references: [id], onDelete: Cascade)
  favorites     Favorite[]
  quizQuestions QuizQuestion[]

  @@index([genreId])
  @@index([progressionId])
  @@map("songs")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts     Account[]
  sessions     Session[]
  favorites    Favorite[]
  quizSessions QuizSession[]

  @@map("users")
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
  @@map("verification_tokens")
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  songId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  song Song @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@unique([userId, songId])
  @@map("favorites")
}

enum QuizMode {
  piano
  repertoire
}

model QuizSession {
  id             String         @id @default(cuid())
  userId         String
  genreId        String
  mode           QuizMode
  totalQuestions Int            @default(10)
  correctAnswers Int            @default(0)
  completedAt    DateTime?
  createdAt      DateTime       @default(now())

  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  genre     Genre          @relation(fields: [genreId], references: [id], onDelete: Cascade)
  questions QuizQuestion[]

  @@index([userId])
  @@index([genreId])
  @@map("quiz_sessions")
}

model QuizQuestion {
  id             String   @id @default(cuid())
  sessionId      String
  questionNumber Int
  progressionId  String?
  songId         String?
  attemptsUsed   Int      @default(0)
  isCorrect      Boolean  @default(false)
  userAnswer     String[] @default([])
  correctAnswer  String[]

  session     QuizSession  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  progression Progression? @relation(fields: [progressionId], references: [id])
  song        Song?        @relation(fields: [songId], references: [id])

  @@index([sessionId])
  @@map("quiz_questions")
}
